<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/options" />

    <TextView
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="17dp"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:text="Hello ," />

    <TextView
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="34dp"
        android:text="PRANISH"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="67dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="318dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_person_foreground" />

    <EditText
        android:id="@+id/chatusersearch"
        android:layout_width="349dp"
        android:layout_height="57dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/buttonbackground"
        android:hint="SEARCH"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textStyle="bold" />

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/medicalfieldrecyclerview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="114dp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_marginTop="177dp"-->
<!--        android:orientation="horizontal" />-->

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatusersearch"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                android:id="@+id/cardiologycardview"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/heart"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARDIOLOGY"
                    android:textColor="#E60B0B"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pulmonologycardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/lungicon"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PULMONOLOGY"
                    android:textColor="#FA0202"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/opthalmologycardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/eyesicon"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPTHALMOLOGY"
                    android:textColor="#E60B0B"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/dentalcardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/teethicon"/>

                <TextView
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DENTAL"
                    android:textColor="#E60B0B"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/gynaecology"/>

                <TextView
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GYNECOLOGY"
                    android:textColor="#E60B0B"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:src="@drawable/appointmenticon"/>

                <TextView
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPOINTMENT"
                    android:textColor="#E60B0B"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="242dp"
        android:gravity="center"
        android:text="TOP DOCTORS"
        android:textColor="#EC0808"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="276dp"
        android:layout_marginBottom="249dp"
        android:gravity="center"
        android:text="SEE ALL"
        android:textColor="#9C27B0"
        android:textSize="13dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topdoctorsrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="42dp" />


</RelativeLayout>