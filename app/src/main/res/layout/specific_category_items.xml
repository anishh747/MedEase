<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/outerLayout"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/prodImageMyCart"
            android:layout_width="80dp"
            android:layout_height="92dp"
            android:layout_gravity="left"
            android:layout_marginStart="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:transitionName="image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

        <TextView
            android:id="@+id/itemNameViewOrder"
            android:layout_width="196dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Item Name"
            android:textColor="#10A6EA"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/prodImageMyCart"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:text="Rs"
            android:textColor="#151515"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/productPriceMyCart" />

        <TextView
            android:id="@+id/productPriceMyCart"
            android:layout_width="41dp"
            android:layout_height="19dp"
            android:layout_marginEnd="176dp"
            android:layout_marginBottom="8dp"
            android:text="15.00"
            android:textColor="#090909"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>